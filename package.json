{
    "name": "hexo-auto-updated",
    "displayName": "Hexo Auto Updated",
    "description": "A Visual Studio Code extension specifically designed for the Hexo blog system. It automatically updates the last modified timestamp in front matter whenever a markdown document is saved.",
    "version": "0.1.5",
    "publisher": "leon-qiu",
    "license": "Zlib",
    "engines": {
        "vscode": "^1.74.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/qzi/hexo-auto-updated.git"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/icon.png",
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": [
            {
                "title": "Hexo Auto Updated",
                "type": "object",
                "properties": {
                    "hexoAutoUpdated.filenamePattern": {
                        "description": "%filenamePattern.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "^(?!.*[/\\\\]\\.vscode[/\\\\]settings.json$)"
                    },
                    "hexoAutoUpdated.lineLimit": {
                        "description": "%lineLimit.description%",
                        "type": "integer",
                        "scope": "language-overridable",
                        "default": 10
                    },
                    "hexoAutoUpdated.birthTimeStart": {
                        "description": "%birthTimeStart.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "date *: "
                    },
                    "hexoAutoUpdated.birthTimeEnd": {
                        "description": "%birthTimeEnd.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "$"
                    },
                    "hexoAutoUpdated.modifiedTimeStart": {
                        "description": "%modifiedTimeStart.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "^updated *: "
                    },
                    "hexoAutoUpdated.modifiedTimeEnd": {
                        "description": "%modifiedTimeEnd.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "$"
                    },
                    "hexoAutoUpdated.luxonFormat": {
                        "description": "%luxonFormat.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "yyyy/LL/dd HH:mm:ss"
                    },
                    "hexoAutoUpdated.luxonTimezone": {
                        "description": "%luxonTimezone.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "system"
                    },
                    "hexoAutoUpdated.momentFormat": {
                        "description": "%momentFormat.description%",
                        "type": "string",
                        "scope": "language-overridable",
                        "default": "YYYY/MM/DD HH:mm:ss"
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js",
        "vsce-go": "vsce package --allow-star-activation && vsce publish --allow-star-activation"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.16.3",
        "@types/vscode": "^1.74.0",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^2.19.0",
        "azure-devops-node-api": "^12.0.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "luxon": "^3.3.0",
        "moment": "^2.29.4"
    }
}